<!DOCTYPE html>

  
    <script>
      <% if(flash.success && flash.success.length > 0 ){ %>
        new Noty({
          theme: 'metroui',
          type: 'success',
          layout: 'topRight',
          text: '<%= flash.success %>',
          timeout: 3000
          }).show();
        
        <% } %>

        <% if(flash.error && flash.error.length > 0 ){ %>
        new Noty({
          theme: 'metroui',
          type: 'error',
          layout: 'topRight',
          text: '<%= flash.error %>',
          timeout: 3000
          }).show();
        
        <% } %>
    </script>

